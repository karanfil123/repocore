<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Electro E-Ticaret</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,500,700" rel="stylesheet">
    <link type="text/css" rel="stylesheet" href="~/web/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/web/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/web/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/web/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/web/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/web/css/style.css" />  

</head>
<body>
    <!-- HEADER -->
    <header>
        <!-- TOP HEADER -->
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> +9055-555-55-00</a></li>
                    <li><a href="#"><i class="fa fa-envelope-o"></i> electro@electro.com.tr</a></li>
                    <li><a href="#"><i class="fa fa-map-marker"></i> 34000 İstanbul / Ataşehir</a></li>
                </ul>
                <ul class="header-links pull-right">
                    <li><a href="#"><i class="fa fa-user-o"></i> Kayıt Ol</a></li>
                    <li><a href="#"> <i class="fa fa-lock"></i> Giriş Yap</a></li>
                </ul>
            </div>
        </div>
        <!-- /TOP HEADER -->
        <!-- MAIN HEADER -->
        <div id="header">
            <!-- container -->
            <div class="container">
                <!-- row -->
                <div class="row">
                    <!-- LOGO -->
                    <div class="col-md-3">
                        <div class="header-logo">
                            <a href="#" class="logo">
                                <img src="~/web/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <!-- /LOGO -->
                    <!-- SEARCH BAR -->
                    <div class="col-md-6">
                        <div class="header-search">
                            <form>
                                <select class="input-select">
                                    <option value="0">Tüm Kategori</option>
                                    <option value="1">Kategori 01</option>
                                    <option value="1">Kategori 02</option>
                                </select>
                                <input class="input" placeholder="Ne Aramıştınız?">
                                <button class="search-btn">Ara</button>
                            </form>
                        </div>
                    </div>
                    <!-- /SEARCH BAR -->
                    <!-- ACCOUNT -->
                    <div class="col-md-3 clearfix">
                        <div class="header-ctn">
                            <!-- Wishlist -->
                            <div>
                                <a href="#">
                                    <i class="fa fa-heart-o"></i>
                                    <span>Favoriler</span>
                                    <div class="qty">0</div>
                                </a>
                            </div>
                            <!-- /Wishlist -->
                            <!-- Cart -->
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Sepetim</span>
                                    <div class="qty">0</div>
                                </a>
                                <div class="cart-dropdown">
                                    <div class="cart-list">
                                        <div class="product-widget">
                                            <div class="product-img">
                                                <img src="~/web/img/product01.png" alt="">
                                            </div>
                                            <div class="product-body">
                                                <h3 class="product-name"><a href="#">Ürün Adı</a></h3>
                                                <h4 class="product-price"><span class="qty">adet</span>fiyat</h4>
                                            </div>
                                            <button class="delete"><i class="fa fa-close"></i></button>
                                        </div>

                                    </div>
                                    <div class="cart-summary">
                                        <small>3 seçilen ürün sayısı</small>
                                        <h5>Toplam Fiyat: $2940.00</h5>
                                    </div>
                                    <div class="cart-btns">
                                        <a href="#">Sepeti Görüntüle</a>
                                        <a href="#">Çıkış  <i class="fa fa-arrow-circle-right"></i></a>
                                    </div>
                                </div>
                            </div>
                            <!-- /Cart -->
                            <!-- Menu Toogle -->
                            <div class="menu-toggle">
                                <a href="#">
                                    <i class="fa fa-bars"></i>
                                    <span>Menü</span>
                                </a>
                            </div>
                            <!-- /Menu Toogle -->
                        </div>
                    </div>
                    <!-- /ACCOUNT -->
                </div>
                <!-- row -->
            </div>
            <!-- container -->
        </div>
        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->
    <!-- NAVIGATION -->
    <nav id="navigation">
        <!-- container -->
        <div class="container">
            <!-- responsive-nav -->
            <div id="responsive-nav">
                <!-- NAV -->
                <ul class="main-nav nav navbar-nav">
                    <li class=" #"><a href="#"><i class="fa fa-home text-xl-center"></i> Ana Sayfa</a></li>
                    <li><a href="#">Fırsat Ürünler</a></li>
                    <li><a href="#">Kategoriler</a></li>
                    <li><a href="#">Dizüstü Bilgisayarlar&Aksesuarlar</a></li>
                    <li><a href="#">Telefonlar</a></li>
                    <li><a href="#">Kameralar</a></li>
                    <li><a href="#">Masaüstü Bilgisayarlar&Aksesuarlar</a></li>
                </ul>
                <!-- /NAV -->
            </div>
            <!-- /responsive-nav -->
        </div>
        <!-- /container -->
    </nav>
    <!-- /NAVIGATION -->
    <!-- BREADCRUMB + sectio-->
    @RenderBody()
    <!-- /SECTION +breadcrumb -->
    <!-- NEWSLETTER -->
    @await Html.PartialAsync("~/Views/Newsletter/NewsletterAddPartial.cshtml")
    
    <!-- /NEWSLETTER -->
    <!-- FOOTER -->
    @await Html.PartialAsync("_FooterPartial")
    <!-- /FOOTER -->
    <!-- jQuery Plugins -->
    <script src="~/web/js/jquery.min.js"></script>
    <script src="~/web/js/bootstrap.min.js"></script>
    <script src="~/web/js/slick.min.js"></script>
    <script src="~/web/js/nouislider.min.js"></script>
    <script src="~/web/js/jquery.zoom.min.js"></script>
    <script src="~/web/js/main.js"></script>

</body>
</html>
